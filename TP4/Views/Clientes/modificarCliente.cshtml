@model TP4.ViewModels.ClienteViewModel

<section>
    <h1 class="text-center">Modificar informaci√≥n del cliente:</h1>
    <article>
        <form asp-controller="Clientes" asp-action="modificarClientePost" method="post">

             <label asp-for="@Model.Nombre"> @Html.DisplayNameFor(Model => Model.Nombre)
                <input asp-for="@Model.Nombre" type="text">
            </label>
            <span class="form-control" asp-validation-for="@Model.Nombre" ></span>

            <label for="@Model.Direccion"> @Html.DisplayNameFor(Model => Model.Direccion) 
                <input name="direccion" type="text" value="@Model.Direccion">
            </label>
            <span class="form-control" asp-validation-for="@Model.Direccion" ></span>

            <label for="@Model.Telefono"> @Html.DisplayNameFor(Model => Model.Telefono)
                <input name="telefono" type="text" value="@Model.Telefono">
            </label>    
            <span class="form-control" asp-validation-for="@Model.Telefono" ></span> 

            <label for="@Model.DatosReferenciaDireccion"> @Html.DisplayNameFor(Model => Model.DatosReferenciaDireccion)
                <input name="datosReferenciaDireccion" type="text" value="@Model.DatosReferenciaDireccion">
            </label>    
            <span class="form-control" asp-validation-for="@Model.DatosReferenciaDireccion"></span> 

            @Html.HiddenFor(model => model.ID) <!-- Pasar el ID a la vista de manera oculta-->
            <input type="submit" value="Cargar">

        </form>
    </article>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> } 